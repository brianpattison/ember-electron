<div class="index">
  <h1>Hello World</h1>

  <p>
    Electron + Ember CLI
  </p>

  <p>
    <button {{action "openUrl" "https://github.com/brianpattison/ember-electron"}}>
      <i class="fa fa-github"></i>
      View on GitHub
    </button>

    <button {{action "getVersion"}}>
      <i class="fa fa-info-circle"></i>
      App Information
    </button>

    <button {{action "showInFinder"}}>
      <i class="fa fa-folder-open-o"></i>
      Show in Finder
    </button>
  </p>

  <p>
    <button {{action "openUrl" "http://electron.atom.io/docs/v0.31.0/#api-references"}}>
      Electron
    </button>

    <button {{action "openUrl" "http://emberjs.com/api/"}}>
      Ember
    </button>

    <button {{action "openUrl" "http://bourbon.io/docs/"}}>
      Bourbon
    </button>

    <button {{action "openUrl" "http://thoughtbot.github.io/neat-docs/latest/"}}>
      Neat
    </button>

    <button {{action "openUrl" "https://fortawesome.github.io/Font-Awesome/icons/"}}>
      Font Awesome
    </button>
  </p>
</div>
